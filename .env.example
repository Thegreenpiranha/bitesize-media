cat > .env.example << 'EOF'
# Creator Configuration
CREATOR_PUBKEY=npub1...
CREATOR_NAME=alice

# Relay Configuration
RELAY_URL=wss://alice.bitesize-media.com
RELAY_HOST=localhost
RELAY_PORT=7777

# Platform Configuration
PLATFORM_PRIVKEY=nsec1...
PLATFORM_PUBKEY=npub1...

# Subscription Settings
SUBSCRIPTION_PRICE_SATS=10000
SUBSCRIPTION_DURATION_DAYS=30
PLATFORM_FEE_PERCENT=2.1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/bitesize
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bitesize
DB_USER=bitesize_user
DB_PASSWORD=your_secure_password

# Monitored Relays (comma-separated)
MONITORED_RELAYS=wss://relay.damus.io,wss://nos.lol,wss://relay.nostr.band

# Redis (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379

# Environment
NODE_ENV=development
LOG_LEVEL=info
EOF